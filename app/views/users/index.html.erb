<div class="candidates index">
  <h2>List of Candidates</h2>

  <div class="table-responsive">
  <table class="table table-hover" summary="Candidates Enrolled for Training Program">
    <tr class="header">
      <th>Candidates</th>
      <th>Email</th>
      <th>College</th>
      <th>Actions</th>
    </tr>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to(candidate.name, user_path(candidate.id),:class => 'action show') %></td>
      <td><%= candidate.email %></td>
      <td><%= candidate.college %></td>
      <td class="actions">
        <%= link_to("Results", user_results_path(candidate.id) , :class => 'btn btn-info') %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>
  <%= link_to("Add New Candidate", new_user_path , :class => 'btn btn-primary') %>
</div>