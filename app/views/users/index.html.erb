<div class="candidates index">
  <h2>List of Candidates</h2>

  <%= link_to("Add New Candidate", new_user_path , :class => 'action new') %>

  <table class="listing" summary="Candidates Enrolled for Training Program">
    <tr class="header">
      <th>Candidates</th>
      <th>Email</th>
      <th>College</th>
      <th>Actions</th>
    </tr>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to(candidate.name, user_path(candidate.id),:class => 'action show') %></td>
      <td><%= candidate.email %></td>
      <td><%= candidate.college %></td>
      <td class="actions">
        <%= link_to("Edit", edit_user_path(candidate.id), :class => 'action edit') %>
        <%= link_to("Delete", delete_user_path(candidate.id) , :class => 'action delete') %>
        <%= link_to("Update Result", user_results_path(candidate.id) , :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>