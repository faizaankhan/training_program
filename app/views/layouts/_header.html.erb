<header class="navbar navbar-inverse">
  <div class="container">
    <nav>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%if logged_in? && current_user.admin_user==true %>
        <%= link_to "Training@Kreeti", dash_path, id: "logo" %>
      <%elsif logged_in?%>
        <%= link_to "Training@Kreeti", home_path, id: "logo" %>
      <%else%>
        <%= link_to "Training@Kreeti", login_path, id: "logo" %>
      <%end%>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <%if logged_in? && current_user.admin_user==true %>
          <li><%= link_to "Exams", exams_path %></li>
          <li><%= link_to "Candidates", users_path %></li>
        <%elsif logged_in?%>
          <li><%= link_to "Profile", user_path(current_user.id) %></li>
        <%end%>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span> <%=current_user.name%> <b class="caret"></b>
              </a>
              
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
      </ul>
    </div>
    </nav>
  </div>
</header>